{
  "name": "uptrack",
  "version": "1.0.0",
  "description": "UpTrack - A modern task management application with React frontend and GraphQL backend",
  "scripts": {
    "dev": "docker-compose up",
    "dev:detached": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose down",
    "dev:restart": "docker-compose restart",
    "dev:rebuild": "docker-compose up --build",
    "dev:clean": "docker-compose down -v --remove-orphans",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "backend:migrate": "cd backend && npm run db:migrate",
    "backend:generate": "cd backend && npm run db:generate",
    "backend:studio": "cd backend && npm run db:studio",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "setup": "npm run install:all && npm run backend:generate",
    "reset:db": "cd backend && npm run db:reset"
  },
  "keywords": [
    "task-management",
    "react",
    "typescript",
    "graphql",
    "apollo",
    "prisma",
    "postgresql",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
